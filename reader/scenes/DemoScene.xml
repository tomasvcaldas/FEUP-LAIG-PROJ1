    <spot id="spot1" enabled="1" angle="40" exponent="0.5">
      <target x="1" y="1" z="0.5" />
      <location x="4" y="2" z="2" />
      <ambient r="0.5" g="0.5" b="0.5" a="0.5" />
      <diffuse r="0.5" g="0.5" b="0.5" a="0.5" />
      <specular r="0.5" g="0.5" b="0.5" a="0.5" />
