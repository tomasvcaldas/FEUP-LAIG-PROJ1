<dsx>

  <globals background ="0 0.5 0.5 1" drawmode="fill" shading="gouraud" cullface="none" cullorder="CCW" />

  <list>
    <elem id="rect" coords="0 0 1" />
  </list>


  <!-- deve definir-se um objeto para raiz do grafo , assim -->
  <!-- como o comprimento dos tres eixos (cilindros) -->
  <scene root="root" axis_length="3" />

  <views default="p1" >

    <!-- declaracao obrigatoria de pelo menos uma vista; -->
    <!-- se varias vistas declaradas, o default e' a -->
    <!-- primeira vista; de cada vez que se pressione a tecla v/V, -->
    <!-- a vista muda para a proxima da lista; da -->
    <!-- ultima vista da lista volta 'a primeira -->
    <perspective id="default" near="0.1" far="300" angle="25">
      <from x="15" y="15" z="15" />
      <to x="0" y="0" z="0" />
    </perspective>

    <perspective id="p1" near="0.1" far="500" angle="22">
      <from x="15" y="20" z="35" />
      <to x="5" y="5" z="5" />
    </perspective>

    <perspective id="p2" near="0.1" far="1500" angle="40">
           <from x="25" y="25" z="25" />
           <to x="0" y="0" z="0" />
    </perspective>

  </views>

  <illumination doublesided="1" local="1" >

    <ambient r="0.5" g="0.5" b="0.5" a="0.5" />
    <background r="0.1" g="0.1" b="0.2" a="1" />

  </illumination>

  <textures>
    <texture id="floor" file="./resources/images/carpet3.jpg" length_s="1.0" length_t="1.0" />
    <texture id="wood" file="./resources/images/wood.jpg" length_s="1.0" length_t="1.0" />
    <texture id="boia" file="./resources/images/boia.jpg" length_s="1.0" length_t="1.0" />
    <texture id="wall" file="./resources/images/ines.jpg" length_s="1.0" length_t="1.0" />

  </textures>

  <lights>
    <omni id="omni1" enabled="1" >
      <location x="4" y="4" z="4" w="0.2" />
      <ambient r="0.8" g="0.8" b="0.8" a="0.8" />
      <diffuse r="0.5" g="0.5" b="0.5" a="0.5" />
      <specular r="1" g="1" b="0" a="1" />
    </omni>

    <omni id="omni2" enabled="1">
      <location x="10.5" y="6.0" z="1.0" w="1.0" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
      <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </omni>

    <omni id="omni3" enabled="1">
      <location x="10.5" y="6.0" z="15.0" w="1.0" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
      <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </omni>

    <omni id="omni4" enabled="1" >
      <location x="6" y="10" z="4" w="5" />
      <ambient r="0.2" g="0.2" b="02" a="1" />
      <diffuse r="0" g="0" b="1" a="1" />
      <specular r="0" g="0" b="1" a="1" />
    </omni>

    <spot id="spot1" enabled="1" angle="40" exponent="0.5">
      <target x="1" y="1" z="0.5" />
      <location x="4" y="2" z="7" />
      <ambient r="1" g="0" b="0" a="1" />
      <diffuse r="0.5" g="0.5" b="0.5" a="0.5" />
      <specular r="0.5" g="0.5" b="0.5" a="0.5" />
    </spot>

    <spot id="spot2" enabled="0" angle="60" exponent="0.5">
      <target x="1" y="1" z="0.5" />
      <location x="4" y="2" z="7" />
      <ambient r="0" g="1" b="" a="1" />
      <diffuse r="0.5" g="0.5" b="0.5" a="0.5" />
      <specular r="0.5" g="0.5" b="0.5" a="0.5" />
    </spot>

    <spot id="spot3" enabled="0" angle="90" exponent="0.5">
      <target x="1" y="1" z="0.5" />
      <location x="4" y="2" z="7" />
      <ambient r="0" g="0" b="1" a="1" />
      <diffuse r="0.5" g="0.5" b="0.5" a="0.5" />
      <specular r="0.5" g="0.5" b="0.5" a="0.5" />
    </spot>

    <spot id="spot4" enabled="0" angle="20" exponent="0.5">
      <target x="1" y="1" z="0.5" />
      <location x="4" y="2" z="7" />
      <ambient r="0.5" g="0.5" b="0.5" a="1" />
      <diffuse r="0.5" g="0.5" b="0.5" a="0.5" />
      <specular r="0.2" g="0.2" b="0.2" a="0.2" />
    </spot>
  </lights>


  <materials>

    <!-- Deve existir um ou mais blocos "material" -->
    <!-- Os identificadores "id" nao podem ser repetidos -->
    <material id="material1" >
      <emission r="0.2" g="0.2" b="0.2" a="0.2" />
      <ambient r="0.7" g="0.7" b="0.7" a="0.7" />
      <diffuse r="0.7" g="0.7" b="0.7" a="1" />
      <specular r="1" g="1" b="1" a="1" />
      <shininess value="0.1" />
    </material>

    <material id="material2" >
      <emission r="0" g="0" b="0" a="0" />
      <ambient r="0" g="0" b="0" a="0" />
      <diffuse r="0" g="0" b="0" a="1" />
      <specular r="1" g="1" b="1" a="1" />
      <shininess value="0.8" />
    </material>



  </materials>


  <transformations>

    <!-- Deve existir um ou mais blocos "transformation" -->
    <!-- Os identificadores "id" nao podem ser repetidos -->

    <transformation id="sample">
      <scale x="1" y="1" z="1" />
    </transformation>

    <transformation id="torus">
      <!-- instrucoes a usar sem limite nem ordem -->
      <!-- deve existir pelo menos uma transformacao -->
      <translate x="1" y="1.75" z="3" />
      <rotate axis="x" angle="-90" />
      <scale x="0.3" y="0.3" z="0.3" />
    </transformation>

    <transformation id="cube">
      <translate x="1" y="1.5" z="2" />
      <scale x="1.8" y="0.2" z="3" />
    </transformation>

    <transformation id="face1">
      <translate x="0" y="0" z="0.5" />
    </transformation>

    <transformation id="face2">
      <translate x="0" y="0" z="-0.5" />
      <rotate axis="y" angle="180" />
    </transformation>

    <transformation id="face3">
      <translate x="-0.5" y="0" z="0" />
      <rotate axis="y" angle="-90" />
    </transformation>

    <transformation id="face4">
      <translate x="0.5" y="0" z="0" />
      <rotate axis="y" angle="90" />
    </transformation>

    <transformation id="face5">
      <translate x="0" y="-0.5" z="0" />
      <rotate axis="x" angle="90" />
    </transformation>

    <transformation id="face6">
      <translate x="0" y="0.5" z="0" />
      <rotate axis="x" angle="-90" />
    </transformation>

    <transformation id="leg1">
      <translate x="0.2" y="0" z="3.4" />
      <rotate axis="x" angle="-90" />
      <scale x="0.1" y="0.1" z="1.5" />
    </transformation>7

    <transformation id="leg2">
      <translate x="0.2" y="0" z="0.6" />
      <rotate axis="x" angle="-90" />
      <scale x="0.1" y="0.1" z="1.5" />
    </transformation>

    <transformation id="leg3">
      <translate x="1.8" y="0" z="3.4" />
      <rotate axis="x" angle="-90" />
      <scale x="0.1" y="0.1" z="1.5" />
    </transformation>

    <transformation id="leg4">
      <translate x="1.8" y="0" z="0.6" />
      <rotate axis="x" angle="-90" />
      <scale x="0.1" y="0.1" z="1.5" />
    </transformation>

    <transformation id="triangle1">
      <translate x="0.8" y="1.6" z="0.7" />
      <rotate axis="x" angle="30" />
    </transformation>

    <transformation id="triangle2">
      <translate x="0.8" y="1.6" z="1.7" />
      <rotate axis="x" angle="-30" />
      <rotate axis="y" angle="180" />
    </transformation>

    <transformation id="triangle3">
      <translate x="0.3" y="1.6" z="1.2" />
      <rotate axis="z" angle="-30" />
      <rotate axis="y" angle="90" />
    </transformation>

    <transformation id="triangle4">
      <translate x="1.3" y="1.6" z="1.2" />
      <rotate axis="z" angle="30" />
      <rotate axis="y" angle="-90" />
    </transformation>

    <transformation id="rightwall">
      <scale x="7" y="5" z="7" />
      <translate x="0.5" y="0.5" z="0" />
      <rotate axis="z" angle="90" />
      <rotate axis="z" angle="90" />

    </transformation>

    <transformation id="leftwall">
      <scale x="7" y="5" z="7" />
      <translate x="0" y="0.5" z="0.5" />
      <rotate axis="y" angle="90" />
      <rotate axis="z" angle="180" />
    </transformation>

    <transformation id="floor">
      <scale x="7" y="7" z="7" />
      <translate x="0.5" y="0" z="0.5" />
      <rotate axis="x" angle="-90" />
      <rotate axis="z" angle="180" />
    </transformation>

  </transformations>


  <primitives>

    <primitive id="quad">
      <rectangle x1="0" y1="1" x2="0" y2="1" />
    </primitive>

    <primitive id="triangle">
      <triangle x1="-0.5" y1="0" z1="0" x2="0" y2="1" z2="0" x3="0.5" y3="0" z3="0" />
    </primitive>

    <primitive id="torus">
      <torus inner="0.5" outer="1" slices="20" loops="10" />
    </primitive>

    <primitive id="cylinder">
      <cylinder base="0.5" top="0.5" height="1" slices="50" stacks="20" />
    </primitive>

    <primitive id="sphere">
      <sphere radius="1" slices="50" stacks="20" />
    </primitive>


  </primitives>


  <components>

    <component id="start">
      <!-- bloco "transformation" obrigatorio -->
      <transformation>
        <transformationref id="sample"/>
      </transformation>

      <children>
        <componentref id="table" />
        <componentref id="torus1" />
        <componentref id="pyramid"/>
        <componentref id="rightwall"/>
        <componentref id="leftwall"/>
        <componentref id="floor"/>
      </children>

      <materials>
          <material id="material1" />
          <material id="material2" />
      </materials>

      <texture id="none" />

    </component>

    <component id="table">

      <transformation>
        <transformationref id="sample"/>
      </transformation>

      <children>
        <componentref id="cube" />
        <componentref id="legs" />
      </children>

      <materials>
          <material id="inherit" />
      </materials>

      <texture id="wood" />

    </component>

    <component id="cube">

      <transformation>
        <transformationref id="cube"/>
      </transformation>

      <children>
        <componentref id="face1"/>
        <componentref id="face2"/>
        <componentref id="face3"/>
        <componentref id="face4"/>
        <componentref id="face5"/>
        <componentref id="face6"/>
      </children>

      <materials>
          <material id="inherit" />
      </materials>

      <texture id="wood" />

    </component>

    <component id="face1">

      <transformation>
        <transformationref id="face1"/>
      </transformation>

      <children>
        <primitiveref id="quad"/>
      </children>

      <materials>
          <material id="inherit" />
      </materials>

      <texture id="inherit" />

    </component>

    <component id="face2">

      <transformation>
        <transformationref id="face2"/>
      </transformation>

      <children>
        <primitiveref id="quad"/>
      </children>

      <materials>
          <material id="inherit" />
