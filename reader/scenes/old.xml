      <texture id="inherit" />

    </component>

    <component id="face3">

      <transformation>
        <transformationref id="face3"/>
      </transformation>

      <children>
        <primitiveref id="quad"/>
      </children>

      <materials>
          <material id="inherit" />
      </materials>

      <texture id="inherit" />

    </component>

